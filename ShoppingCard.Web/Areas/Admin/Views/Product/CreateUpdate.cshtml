@model ProductVM;
@{
    ViewData["Title"] =((Model.product.Id == 0 ) ? "Ceate" : "Update")+"Product";
}
<br/>
<section>
    <div> 
         <h2 class="text-primary">@((Model.product.Id == 0  ) ? "Create" : "Update") Category </h2>
       </div>
       <hr/>
</section>

<form>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group mt-2">
        <label asp-for="product.Id" class="form-lable"></label>
        <input  disabled asp-for="product.Id" class="form-control"/>
        <span asp-validation-for="product.Id"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="product.Name" class="form-label"></label>
        <input asp-for="product.Name" class="form-control"/>
        <span asp-validation-for="product.Name"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="product.Description" class="form-label"></label>
        <input asp-for="product.Description" class="form-control"/>
        <span asp-validation-for="product.Description"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="product.Price" class="form-label"></label>
        <input asp-for="product.Price" class="form-control"/>
        <span asp-validation-for="product.Price"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="product.ImgUrl" class="form-label"></label>
        <input asp-for="product.ImgUrl" type="file" class="form-control"/>
        <span asp-validation-for="product.ImgUrl"></span>
    </div>
   <div class="form-group mt-2">
       <input type="submit" value=@((Model.product.Id == 0 )? "Ceate":"Update") class="btn btn-primary" />
       <a asp-area="Admin" asp-action="Index" asp-controller="Product" class="btn btn-danger">Cancel</a>
   </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
