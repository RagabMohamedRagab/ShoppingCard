@model List<Product>;
@{
    ViewData["Title"] = "List-Product";
}
<section  class="mt-3 ">
    <div class="row offset-md-2 ">
        @for(int i = 0; i<Model.Count(); i++)
        {
            <div class="card col-md-3 m-1">
                <div class="card-header" style="width:100%;height:100%">
                    <img src="~/Images/@Model[i].ImgUrl"class="card-img-top" style="width:100%;height:100%"   alt="Card-Img"/>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model[i].Name</h5>
                    <p class="Card-text">@Model[i].Price.ToString("0.00")</p>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-area="Customer" asp-action="Details" asp-controller="Customer" asp-route-id="@Model[i].Id"><img src="~/assest/journal-text.svg" alt=""/></a>
                </div>
            </div>
        }
    </div>

</section>


